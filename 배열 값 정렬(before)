public class BA {
	public static void main(String[] args) {
		


		//배열의 크기
		Scanner sc = new Scanner(System.in);
		
		System.out.println("배열의 크기");
		int 배열크기 = sc.nextInt();
		
		int[] 배열 = new int[배열크기];
		
		for(int i=0; i<배열.length; i++) {
			         //"배열크기"도 가능
			System.out.println("입력!");
			배열[i] = sc.nextInt();
		}
		
		System.out.print("졍렬 전: ");
