package km_0523;

import java.util.Scanner;

public class jijij {

	public static void main(String[] args) {
		//숫자 입력 받아서 1부터 홀수끼리 더하고 짝수끼리 더하기
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int even = 0;
		int odd = 0;
		
		for(int i=1; i<=a; i++) {
			//1~a 까지 도는 반복문
			//짝수 일때
			if(i%2==0) {
				even = even + i;
			}else if(i%2!=0) {
				//홀수 일때
				odd += i;
			}

		}
		System.out.println("짝수합: "+even);
		System.out.println("홀수합: "+odd);
		

	}

}
